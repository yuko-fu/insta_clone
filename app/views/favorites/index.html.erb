<p id="notice"><%= notice %></p>

<h1>Favorite</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td>
        <%= image_tag(favorite.picture.image.url) if favorite.picture.image && favorite.picture.image.url %>
        </td>
        <td><%= favorite.picture.user.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', pictures_path %>